<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Simple User Manager by: David Schlenker</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <link href="CSS/Styles.css" rel="stylesheet">
    <script src="http://localhost:<%=PORT%>/socket.io/socket.io.js"></script>
    <script src="https://simple-user-manager-PG.herokuapp.com/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let User = {};
        function getEdit() {
            socket.emit('GETEDIT');
        }
        function loadUser(data) {
            User = data;
            document.getElementById('editForm').innerHTML = `

            <div class="input-group flex-row" style="padding: 0 10px 10px 10px;">
                <div class="input-group-prepend">
                    <span class="input-group-text input-tag">UserID</span>
                </div>
                <input id="USERID" type="text" disabled class="form-control" placeholder="UUID" aria-label="UUID" value="${data.userid}">
            </div>
            <div class="input-group flex-row" style="padding: 0 10px 10px 10px;">
                <div class="input-group-prepend">
                    <span class="input-group-text input-tag">Email</span>
                </div>
                <input name="email" id="email" type="email" class="form-control" placeholder="Email" aria-label="email" value="${data.email.toLowerCase()}">
            </div>
            <div class="input-group flex-row" style="padding: 0 10px 10px 10px;">
                <div class="input-group-prepend">
                    <span class="input-group-text input-tag">First</span>
                </div>
                <input name="FirstName" id="FirstName" type="text" class="form-control" placeholder="First Name" aria-label="first name" value="${data.firstname.toLowerCase()}">
            </div>
            <div class="input-group flex-row" style="padding: 0 10px 10px 10px;">
                <div class="input-group-prepend">
                    <span class="input-group-text input-tag">Last</span>
                </div>
                <input name="LastName" id="LastName" type="text" class="form-control" placeholder="Last Name" aria-label="last name" value="${data.lastname.toLowerCase()}">
            </div>
            <div class="input-group flex-row" style="padding: 0 10px 10px 10px;">
                <div class="input-group-prepend">
                    <span class="input-group-text input-tag">Age</span>
                </div>
                <input name="age" id="age" type="number" class="form-control" placeholder="Age" aria-label="age" value="${data.age}">
            </div>

            `
        }
        socket.on('USEREDIT', (data) => {
            console.log('CALL RECEIVED');
            console.log(data);
            loadUser(data);
        })
        function updateUser() {
            socket.emit('UPDATEUSER', {userid: User.userid, email: document.getElementById('email').value.toLowerCase(), firstname: document.getElementById('FirstName').value.toLowerCase(), lastname: document.getElementById('LastName').value.toLowerCase(), age: document.getElementById('age').value});
            User = {userid: User.userid, email: document.getElementById('email').value.toLowerCase(), firstname: document.getElementById('FirstName').value.toLowerCase(), lastname: document.getElementById('LastName').value.toLowerCase(), age: document.getElementById('age').value};
        }
    </script>
</head>
<body onload="getEdit();">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">User Manager</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/create">Create</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/list">List</a>
            </li>

        </ul>
    </div>
</nav>
<div class="container">
    <div class="card" style="width: 32rem;">
        <div class="card-body">
            <h5 class="card-title">User Editor</h5>
            <h6 class="card-subtitle text-muted">Make your changes and Submit!</h6>
        </div>
        <form id="editForm">



        </form>
        <div class="submitDiv">
            <a class="btn btn-primary" style="color: whitesmoke" href="/list" onclick="updateUser();">Save</a>
        </div>
    </div>
</div>
</body>
</html>